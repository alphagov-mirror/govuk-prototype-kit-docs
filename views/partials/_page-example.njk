{% macro page-example(params) %}

{% if params.id %}
  {% set exampleId = params.id %}
{% else %}
  {% set exampleId = exampleTitle | slugger %}
{% endif %}

{% set display = params.displayExample | default(true) %}

<div class="app-example-wrapper" id="{{ exampleId }}">
  {% if display %}
  <div class="app-example {{ "app-example--tabs" if params.html or params.nunjucks }}">
    <span class="app-example__new-window">
      <a href="{{ exampleURL }}" target="_blank">
        Open this
        <span class="govuk-visually-hidden"> "{{ exampleTitle }}" </span>
        example in a new window
      </a>
    </span>
    <iframe title="{{ params.title }}" data-module="app-example-frame" class="app-example__frame app-example__frame--resizable{% if params.size %} app-example__frame--{{ params.size }}{% endif %}" src="{{ params.src }}" frameBorder="0"></iframe>
  </div>
  {% endif %}

</div>

{% endmacro %}
